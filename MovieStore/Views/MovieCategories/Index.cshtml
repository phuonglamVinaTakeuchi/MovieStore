@model IEnumerable<MovieStore.Models.ViewModels.MovieCategoryViewModel>
@{
  ViewData["Title"] = "Movie Category List";
}

<div class="row">
  <div class="col-md-8 offset-md-2">
    <table class="table">
      <thead>
      <tr class="text-center">
        <th>@Html.DisplayNameFor(model=>model.Name)</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      @foreach (var item in Model)
      {
        <tr>
          <td class="align-middle">
            @Html.DisplayFor(modelItem=>item.Name)
          </td>
          <td class="align-middle">
            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"> Edit</i></a> |
            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@item.Id"><i class="bi bi-eye"> Detail</i></a> |
            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"> Delete</i></a> |
          </td>
        </tr>
      }
      </tbody>
    </table>
  </div>
</div>

<div class="text-white">
  <a asp-controller="MovieCategories" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add new</a>
</div>

