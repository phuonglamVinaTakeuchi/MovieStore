@model IEnumerable<MovieStore.Models.Entities.Cinema>
@{
  ViewData["Title"] = "Cinema List";
}

<div class="row">
  <div class="col-md-8 offset-md-2">
    <table class="table">
      <thead>
        <tr class="text-center">
          <th>@Html.DisplayNameFor(model=>model.Logo)</th>
          <th>@Html.DisplayNameFor(model=>model.Name)</th>
          <th>@Html.DisplayNameFor(model=>model.Description)</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td class="align-middle">
              <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px"/>
            </td>
            <td class="align-middle">
              @Html.DisplayFor(modelItem=>item.Name)
            </td>
            <td class="align-middle">
              @Html.DisplayNameFor(modelItem=>item.Description)
            </td>
            <td class="align-middle">
              <a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a> |
              <a class="btn btn-outline-danger"><i class="bi bi-trash">DeleteAsync</i></a> |
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>
