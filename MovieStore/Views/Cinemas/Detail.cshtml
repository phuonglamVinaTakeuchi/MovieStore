@model MovieStore.Models.ViewModels.CinemaViewModel
@{
  ViewData["Title"] = "Cinema detail information";
}

<div class="row">
  <div class="col-md-8 offset-2">
    <p>
      <h1>@ViewData["Title"]</h1>
    </p>
    <div class="row">
      <div class="col-md-8 offset-2">
        <div class="mb-3 text-center">
          <img src="@Model.Logo" class="border-info rounded-circle" style="max-width: 150px" />
        </div>
        <div class="mb-3">
          <label asp-for="Logo" class="form-label"></label>
          <input asp-for="Logo" class="form-control" readonly />
        </div>
        <div class="mb-3">
          <label asp-for="Name" class="form-label"></label>
          <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="mb-3">
          <label asp-for="Description" class="form-label"></label>
          <input asp-for="Description" class="form-control" readonly />
        </div>
        <div class="mb-3">
          <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
          <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
        </div>
      </div>
    </div>
  </div>
</div>


